# Gemfile for Jekyll Web Development Project

source 'https://rubygems.org'

# Specify your Jekyll version
gem 'jekyll', '~> 3.9'

# Optional: Theme or other Jekyll plugins you may want to use
gem 'jekyll-theme-slate', '~> 0.1'

# Optional: For building or deploying the site
gem 'jekyll-paginate', '~> 1.1'

# For SEO-friendly links
gem 'jekyll-seo-tag', '~> 2.7'

# For including or working with SASS
gem 'sassc', '~> 2.4'

# For syntax highlighting
gem 'jekyll-scholar', '~> 5.0'  # Optional, if you want academic-style citation support

# For markdown rendering
gem 'kramdown', '~> 2.3'

# Optional: If you want to add GitHub Pages gem for convenience (automatically installs the right dependencies for GitHub Pages)
gem 'github-pages', group: :jekyll_plugins

# Optional: For faster builds, you might want to use the jekyll-optimist plugin (for performance optimization)
#gem 'jekyll-optimist'

# Development dependencies
group :development do
  gem 'jekyll-watch', '~> 2.2.1'  # For live reload while editing
  gem 'bundler', '~> 2.3'
end

# Test dependencies (if you're testing the site locally or with CI/CD)
group :test do
  gem 'minitest', '~> 5.14'
end
